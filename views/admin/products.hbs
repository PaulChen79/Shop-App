<div class="container mt-67">
  {{>admin-tabs route='products'}}
<a href='/admin/products/create'>
  <button type="button" class="btn btn-primary">New Products</button>
</a>
<br />
<br />
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Image</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Invetory</th>
      <th scope="col">Price</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td><img class="img-responsive center-block" src="{{this.SKU.image}}" style="width: 100px; border-radius: 50px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;"></td>
        <td>{{this.name}}</td>
        <td>{{#if this.Category.parent.name}}
              [{{this.Category.parent.name}}] ->
            {{/if}}
            [{{this.Category.name}}]
        </td>
        <td>{{this.invetory}}</td>
        <td>${{this.SKU.price}}</td>
        <td class="">
          <button type="button" class="btn btn-link">
            <a class="btn btn-link link-primary" href="/admin/products/{{this.id}}">
              Show
            </a>
          </button>
          <button type="button" class="btn btn-link">
            <a class="btn btn-link link-primary" href="/admin/products/{{this.id}}/edit">
              Edit
            </a>
          </button>
          <form action="/admin/products/{{this.id}}?_method=DELETE" method="POST" style="display: inline;" class="align-self-center">
            <button type="submit" class="btn btn-link link-danger" onclick="return confirm(`確定要刪除 {{ this.name }} 嗎？`)">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>