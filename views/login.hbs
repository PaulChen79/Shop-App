<div class="container" style="margin-top:100px; max-width: 50%;">
  <div class="mb-4 text-center">
    <h1 class="h3 font-weight-normal mb-3">
      Log In
    </h1>
  </div>
  <form class="form-signin" action="/login" method="POST">
    <div class="form-row mb-5">
      <label class="form-label" for="email">
        Email
      </label>
      <input
        class="form-control"
        id="email"
        type="text"
        name="email"
        class="form-control"
        placeholder="Email"
        required
        autofocus
      />
    </div>
    <div class="form-row mb-5">
      <label class="form-label" for="password">
        Password
      </label>
      <input
        class="form-control"
        id="password"
        type="password"
        name="password"
        class="form-control"
        placeholder="Password"
        required
      />
    </div>
    <div class="d-flex justify-content-between">
      <button class="btn btn-primary" type="submit">
        Login
      </button>
      <p class="align-self-center">
        No account?
        <a href="/register">
          Register
        </a>
      </p>
    </div>
  </form>
</div>